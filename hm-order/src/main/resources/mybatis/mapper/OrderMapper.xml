<mapper namespace="com.dupake.order.mapper.OrderMapper">


    <resultMap id="authUserMap" type="com.dupake.order.entity.Order">
        <id column="id" property="id"></id>
        <result property="orderNo" column="order_no"/>
        <result property="name" column="name"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="status" column="status"/>
        <result property="amount" column="amount"/>
        <result property="commodityCode" column="commodity_code"/>

    </resultMap>

    <sql id="authUser_sql">
        id,
        order_no ,
        name ,
        create_time,
        update_time,
        amount,
        status,
        commodity_code
    </sql>

    <select id="findInfoById" resultMap="authUserMap">
        select
        <include refid="authUser_sql"/>
        from t_order where id = #{id}
    </select>

    <select id="findList" resultMap="authUserMap">
        select
        <include refid="authUser_sql"/>
        from t_order
    </select>


    <!--新增-->
    <insert id="insert" parameterType="com.dupake.order.entity.Order" useGeneratedKeys="true" keyProperty="id">
        insert into t_order(
        <trim suffixOverrides=",">
            <if test="createTime != null">
                create_time ,
            </if>
            <if test="updateTime != null">
                update_time ,
            </if>
            <if test="orderNo != null and orderNo != ''">
                order_no ,
            </if>
            <if test="name != null and name != ''">
                name ,
            </if>
            <if test="amount != null and amount != ''">
                amount ,
            </if>
            <if test="status != null and status != ''">
                status ,
            </if>
            <if test="commodityCode != null and commodityCode != ''">
                commodity_code ,
            </if>
        </trim>
        )
        values (
        <trim suffixOverrides=",">
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
            <if test="orderNo != null and orderNo != ''">
                #{orderNo},
            </if>
            <if test="name != null and name != ''">
                #{name},
            </if>
            <if test="amount != null and amount != ''">
                #{amount},
            </if>
            <if test="status != null and status != ''">
                #{status},
            </if>
            <if test="commodityCode != null and commodityCode != ''">
                #{status},
            </if>
        </trim>

        )
    </insert>


