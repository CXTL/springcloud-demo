    <update id="update" parameterType="com.dupake.order.entity.Order">
        update t_order
        <set>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
        delete from t_order where id = {id}
    </delete>

